<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="zb_custom_check_print.report_cheque_qweb">
        <t t-call="web.html_container">
            <t t-call="web.basic_layout">
                <t t-foreach="docs" t-as="o">
                        <div class="page">
                            <div class="dontchnage">
                               <!-- <div class="row" style="padding-left:2.0cm">-->
                                <div class="col-xs-12">

                                <p style="padding-top:1.6cm;padding-left:1.3cm">

                                    <span style="font-size:17px; padding-left:15.0cm;" t-esc="o.check_data_get()[7]"/>

                                    <span style="font-size:17px; padding-left:0.41cm;" t-esc="o.check_data_get()[8]"/>

                                    <span style="font-size:17px; padding-left:0.42cm;" t-esc="o.check_data_get()[5]"/>

                                    <span style="font-size:17px; padding-left:0.42cm;" t-esc="o.check_data_get()[6]"/>

                                    <span style="font-size:17px; padding-left:0.45cm;" t-esc="o.check_data_get()[1]"/>

                                    <span style="font-size:17px; padding-left:0.53cm;" t-esc="o.check_data_get()[2]"/>

                                    <span style="font-size:17px; padding-left:0.57cm;" t-esc="o.check_data_get()[3]"/>

                                    <span style="font-size:17px; padding-left:0.57cm;" t-esc="o.check_data_get()[4]"/>

                                </p>

                                </div>

                               <!-- </div>-->

                            </div>

                            <div class="row" style="font-size:17px; padding-top:0.6cm;padding-left:5.1cm">

                                <div class="col-xs-12">

                                    <span t-field="o.partner_id.name"/>

                                </div>

                            </div>

                            <div class="row" style="font-size:17px; padding-top:0.6cm;padding-left:4.1cm">
                                <div class="col-xs-7">
                                    <t t-set="amt" t-value="o.amount_to_text(o.amount, o)"/>
                                    <t t-set="len" t-value="len(amt)-1"/>
                                    <t t-if="len(amt) &gt; 26">
                                        <t t-set="amt_text" t-value="o.amount_to_text_wrapp(o.amount, o)"/>
                                        <span t-esc="amt_text[0][0]"/><br/>
                                        <span t-esc="amt_text[0][1]" style="line-height:1.5cm;"/><span t-esc="amt_text[0][2]"/>
                                    </t>
                                    <t t-if="len(amt) &lt;= 26">
                                        <span t-esc="o.amount_to_text(o.amount, o)"/>
                                    </t>
                                </div>
                            </div>
                            <div class="row" style="font-size:18px; padding-top:0.0cm;padding-left:1.6cm">
                                <div class="col-sm-4" style="text-align:right;font-size:18px;font-weight:bold;padding-top:0.4cm;padding-right:3cm;">
                                    <strong>*</strong><span t-esc="o._get_amount()"/><strong>*</strong>
                                </div>
                                <div class="col-sm-4"/>
                                <div class="col-sm-4"/>

                            </div>
                        </div>
                </t>
            </t>
        </t>
    </template>

</odoo>
